---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';

const skills = [
  { name: 'HTML', percent: 70 },
  { name: 'CSS', percent: 70 },
  { name: 'Bootstrap', percent: 60 },
  { name: 'JavaScript', percent: 40 },
  { name: 'Java', percent: 60 },
  { name: 'Python', percent: 60 },
  { name: 'SQL Server', percent: 50 },
  { name: 'MongoDB', percent: 40 },
  { name: 'MySQL', percent: 60 },
  { name: 'IIS', percent: 50 },
  { name: 'Azure', percent: 30 },
  { name: 'Postman', percent: 50 },
];

const es = {
  welcome: 'Bienvenido a mi portafolio',
  greeting: '¬°Hola! Soy Didier Alexander Villamil Jimenez',
  role: 'Desarrollador Full Stack (React, NodeJS, .Net) | Experto en soporte t√©cnico | ITIL V4 | Gesti√≥n de servicios TI',
  summary: 'Apasionado por la tecnolog√≠a, actualmente me desempe√±o como operador de centro de datos. Me motiva crear soluciones innovadoras y eficientes.',
  certifications: 'Desarrollo de aplicaciones Full Stack Avanzado - Cymetr√≠a | Diplomado en Desarrollo de Software - UNAL',
  experience: '3.5 a√±os en soporte t√©cnico | 4 meses como operador de centro de datos | 1.5 a√±os en desarrollo de software freelance',
  skills: 'Trabajo en equipo, Creatividad, Pensamiento cr√≠tico, An√°lisis, Pensamiento l√≥gico',
  projects: 'Actualmente construyo una plataforma de aprendizaje como proyecto integrador de mi tecn√≥logo.',
  language: 'Ingl√©s B1',
  about: 'Me apasionan los viajes, pasar tiempo con mi familia y aprender nuevas tecnolog√≠as para mejorar mis habilidades t√©cnicas, creando soluciones de software.',
};
const en = {
  welcome: 'Welcome to my portfolio',
  greeting: "Hi! I'm Didier Alexander Villamil Jimenez",
  role: 'Full Stack Developer (React, NodeJS, .Net) | Technical Support Expert | ITIL V4 | IT Service Management',
  summary: 'Passionate about technology, currently working as a data center operator. I am motivated to create innovative and efficient solutions.',
  certifications: 'Advanced Full Stack Application Development - Cymetr√≠a | Software Development Diploma - UNAL',
  experience: '3.5 years in technical support | 4 months as a data center operator | 1.5 years as a freelance software developer',
  skills: 'Teamwork, Creativity, Critical Thinking, Analysis, Logical Thinking',
  projects: 'I am currently building a learning platform as my technologist integrative project.',
  language: 'English B1',
  about: 'I am passionate about traveling, spending time with my family, and learning new technologies to improve my technical skills by building software solutions.',
};

let lang = 'es';
let t = es;
if (typeof window !== 'undefined') {
  lang = localStorage.getItem('lang') || 'es';
  t = lang === 'es' ? es : en;
}
function switchLang() {
  lang = lang === 'es' ? 'en' : 'es';
  localStorage.setItem('lang', lang);
  location.reload();
}
---
<div id="container">
  <img id="background" src={background.src} alt="" fetchpriority="high" />
  <header id="header">
    <img src={astroLogo.src} width="60" height="30" alt="Logo" />
    <button id="lang-btn" onclick="{switchLang()}">{lang === 'es' ? 'EN' : 'ES'}</button>
  </header>
  <main>
    <section id="profile" class="box special-profile">
      <h3 class="welcome-glow">{t.welcome}</h3>
      <h1 class="futuristic-title">{t.greeting}</h1>
      <h2>{t.role}</h2>
      <p class="summary-glow">{t.summary}</p>
      <div class="avatar-glow">
        <svg width="110" height="110" viewBox="0 0 110 110">
          <defs>
            <radialGradient id="glow" cx="50%" cy="50%" r="50%">
              <stop offset="0%" stop-color="#bc52ee" stop-opacity="0.9"/>
              <stop offset="100%" stop-color="#3245ff" stop-opacity="0.2"/>
            </radialGradient>
          </defs>
          <circle cx="55" cy="55" r="48" fill="url(#glow)" />
          <text x="50%" y="54%" text-anchor="middle" fill="#fff" font-size="28" font-family="Orbitron, Inter, sans-serif" dy=".3em">DA</text>
        </svg>
      </div>
      <div class="profile-details">
        <p><b>{lang === 'es' ? 'Certificaciones:' : 'Certifications:'}</b> {t.certifications}</p>
        <p><b>{lang === 'es' ? 'Experiencia:' : 'Experience:'}</b> {t.experience}</p>
        <p><b>{lang === 'es' ? 'Soft Skills:' : 'Soft Skills:'}</b> {t.skills}</p>
        <p><b>{lang === 'es' ? 'Idioma:' : 'Language:'}</b> {t.language}</p>
        <p><b>{lang === 'es' ? 'Sobre m√≠:' : 'About me:'}</b> {t.about}</p>
      </div>
    </section>
    <section id="projects" class="box futuristic-box">
      <h2><span class="icon-projects">üöÄ</span> {t.projects}</h2>
    </section>
    <section id="skills" class="box futuristic-box">
      <h2><span class="icon-skills">üïπÔ∏è</span> {lang === 'es' ? 'Habilidades T√©cnicas' : 'Technical Skills'}</h2>
      <div class="skills-list">
        {skills.map(skill => (
          <div class="skill-bar">
            <span class="skill-label">{skill.name}</span>
            <div class="bar-bg">
              <div class="bar-fill" style={`width: ${skill.percent}%`}></div>
            </div>
            <span class="percent">{skill.percent}%</span>
          </div>
        ))}
      </div>
    </section>
  </main>
</div>

<style>
#background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: -1;
  filter: blur(80px) brightness(0.7);
}
#container {
  font-family: 'Orbitron', 'Inter', 'Roboto', Arial, sans-serif;
  min-height: 100vh;
  color: #fff;
  background: rgba(20, 20, 30, 0.7);
}
#header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem 2rem 0.5rem 2rem;
}
#lang-btn {
  background: linear-gradient(90deg, #3245ff 0%, #bc52ee 100%);
  color: #fff;
  border: none;
  border-radius: 8px;
  padding: 0.5rem 1rem;
  font-size: 1rem;
  cursor: pointer;
  font-family: inherit;
  box-shadow: 0 2px 8px #0005;
  transition: background 0.2s;
}
#lang-btn:hover {
  background: linear-gradient(90deg, #bc52ee 0%, #3245ff 100%);
}
main {
  max-width: 900px;
  margin: 2rem auto;
  display: flex;
  flex-direction: column;
  gap: 2rem;
}
.box {
  background: rgba(30, 30, 50, 0.95);
  border-radius: 18px;
  box-shadow: 0 4px 32px #0007;
  padding: 2rem;
  border: 1.5px solid #3245ff44;
}
#profile h1 {
  font-size: 2.2rem;
  font-family: 'Orbitron', 'Inter', sans-serif;
  color: #bc52ee;
  margin-bottom: 0.2em;
}
#profile h2 {
  font-size: 1.2rem;
  color: #fff;
  margin-bottom: 0.5em;
}
#profile p {
  font-size: 1.1rem;
  color: #e0e0e0;
}
#exp ul {
  margin: 0;
  padding-left: 1.2em;
}
#exp li {
  font-size: 1.05rem;
  margin-bottom: 0.3em;
}
#skills .skills-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}
.skill-bar {
  display: flex;
  align-items: center;
  gap: 1rem;
}
.bar-bg {
  flex: 1;
  height: 18px;
  background: #23234a;
  border-radius: 10px;
  overflow: hidden;
  margin: 0 0.5rem;
  box-shadow: 0 1px 6px #0004;
}
.bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #3245ff 0%, #bc52ee 100%);
  border-radius: 10px 0 0 10px;
  transition: width 1s cubic-bezier(.4,2,.6,1);
}
.percent {
  min-width: 40px;
  text-align: right;
  color: #bc52ee;
  font-weight: bold;
}
.main-btn {
  display: block;
  margin: 2rem auto 0 auto;
  font-size: 1.2rem;
  padding: 1rem 2.5rem;
  border-radius: 12px;
  background: linear-gradient(90deg, #3245ff 0%, #bc52ee 100%);
  color: #fff;
  text-decoration: none;
  font-family: 'Orbitron', 'Inter', sans-serif;
  box-shadow: 0 2px 12px #0006;
  border: none;
  transition: background 0.2s;
}
.main-btn:hover {
  background: linear-gradient(90deg, #bc52ee 0%, #3245ff 100%);
}
.special-profile {
  position: relative;
  overflow: visible;
  border: 2px solid #bc52ee;
  box-shadow: 0 0 32px #bc52ee55, 0 0 64px #3245ff33;
  text-align: center;
}
.avatar-glow {
  margin: 2rem auto 0 auto;
  width: 110px;
  height: 110px;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: pulse-glow 2.5s infinite alternate;
}
@keyframes pulse-glow {
  0% { filter: drop-shadow(0 0 16px #bc52ee88); }
  100% { filter: drop-shadow(0 0 32px #3245ffcc); }
}
.welcome-glow {
  font-size: 1.3rem;
  color: #fff;
  letter-spacing: 2px;
  text-shadow: 0 0 8px #bc52ee, 0 0 16px #3245ff;
  margin-bottom: 0.5em;
  font-family: 'Orbitron', 'Inter', sans-serif;
}
.futuristic-title {
  font-size: 2.5rem;
  color: #bc52ee;
  letter-spacing: 2px;
  text-shadow: 0 0 16px #bc52ee, 0 0 32px #3245ff;
  font-family: 'Orbitron', 'Inter', sans-serif;
  margin-bottom: 0.2em;
}
.summary-glow {
  color: #fff;
  font-size: 1.1rem;
  text-shadow: 0 0 8px #3245ff99;
}
.profile-details {
  margin-top: 1.5em;
  background: rgba(50, 69, 255, 0.08);
  border-radius: 12px;
  padding: 1em 1.5em;
  box-shadow: 0 0 16px #bc52ee33;
  color: #e0e0e0;
  font-size: 1.05rem;
  text-align: left;
  max-width: 500px;
  margin-left: auto;
  margin-right: auto;
}
.futuristic-box {
  border: 2px solid #3245ff;
  box-shadow: 0 0 32px #3245ff55, 0 0 64px #bc52ee33;
  background: linear-gradient(120deg, rgba(50,69,255,0.12) 0%, rgba(188,82,238,0.10) 100%);
}
.icon-projects, .icon-skills {
  font-size: 1.3em;
  margin-right: 0.5em;
}
.skill-label {
  font-family: 'Orbitron', 'Inter', sans-serif;
  color: #fff;
  font-size: 1.05rem;
  letter-spacing: 1px;
}
@media (max-width: 600px) {
  main {
    padding: 0 0.5rem;
  }
  .box {
    padding: 1rem;
  }
  #header {
    padding: 1rem 0.5rem 0.5rem 0.5rem;
  }
}
</style>
